
<h1>{{user.name}}'s Devices</h1>
  <p>A list of {{user.name}}'s devices.</p>

  <table class='table table-striped table-bordered'>
    <thead>
      <tr>
        <th>Device Name</th>
     </tr>
    </thead>
    <tbody>

      {{#each user.device}}
        <tr>
          <td><a href="/users/{{../user.name}}/{{name}}">{{name}}</a></td>
        </tr>{{/each}}
        {{> addDevice}}
  <tr>
<td><form action="" method="post">
<input type='text' name='deviceName' placeholder=' Add a Device'><button type='submit'>Add</button> 
</form></td>
</tr>
</tbody>
  </table>